<div class="container">
    <h1 class="text-center">Pokemon Details</h1>
  
      <div class="well">
        <h2><%= pokemon.name %></h2>
        <h3><img src="<%= pokemon.sprites.front_default %>"></h3>
        <h3>Height: <%= pokemon.height %></h3>
        <h3>Move: <%= pokemon.moves[0].move.name %></h3>
        <h3>Base Stat: <%= pokemon.stats[0].base_stat %></h3>
      </div>
  </div>