<div class="container">
    <h1 class="text-center">Favorite Pokemon</h1>
  
    <% pokemon.forEach(function(pokemon) { %>
      <div class="well">
        <h2><%= pokemon.name %></h2>
        <form method="GET" action="/pokemon/<%= pokemon.name %>">
          <input hidden type="text" name="name" value="<%= pokemon.name %>">
          <button class="btn btn-primary" type="submit">Click here to see more details!</button>
        </form>
      </div>
    <% }); %>
  </div>